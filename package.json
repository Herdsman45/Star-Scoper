{
  "name": "electron-ocr-tool",
  "version": "1.0.0",
  "description": "Cross-platform OCR tool for screen capture and text processing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "node scripts/dev-helper.js clean",
    "check": "node scripts/dev-helper.js check",
    "prepare-release": "node scripts/dev-helper.js prepare-release",
    "release": "npm run clean && npm run check && npm run build"
  },
  "author": "StarScopeOCR Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^24.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "screenshot-desktop": "^1.15.2",
    "sharp": "^0.32.0",
    "tesseract.js": "^4.0.0"
  },
  "build": {
    "appId": "com.starscoper.ocr-tool",
    "productName": "Star Scoper OCR",
    "files": [
      "**/*",
      "!**/.git/**",
      "!**/.github/**",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.gitignore,.npmignore}",
      "!**/{.eslintignore,.eslintrc.js}"
    ],
    "extraFiles": [
      {
        "from": "eng.traineddata",
        "to": "eng.traineddata"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
